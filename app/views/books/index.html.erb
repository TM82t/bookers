<h1>Books</h1>

 <table>
  <p>Title</p>
  <p>Book</p>
  <p> </p>
  <% @books.each do |book| %>
  <span><%= book.title %></span>
  <span><%= book.body %></span>
  <%= link_to "Show", show_book_path(@book.id) %>
  <%= link_to "Edit", edit_book_path(@book.id) %>
  <%= link_to "Destroy" destroy_book_path(@book.id) %>
  <% end %>
 </table>


<h2>New book</h2>

<%= form_with model: @book do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
  
<% end %>